<header class="main-header">
  <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
    {{!-- barra brasil --}}
    <div id="barra-brasil" style="height: 33px; width: 100%; padding:0 0 0 10px;position: relative; background-color:#f1f1f1;"></div>
    <script defer="defer" src="//barra.brasil.gov.br/barra.js" type="text/javascript"></script>
    {{!-- /barra brasil --}}

    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">
          {{#each conference.logo}}
            <img class="conference-logo" src="{{urls.thumbnail}}">
          {{else}}
            <img class="conference-logo" src="/public/theme/we-theme-conference-seminarioeducacao.fiocruz.br/img/logo-seminario-edicacao.png">
          {{/each}}
        </a>
      </div>
      <div class="collapse navbar-collapse" id="navbar-collapse">
        {{#if req.user.id}}
          {{we-menu userMenu}}
        {{else}}
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="/login">
                Entrar
              </a>
            </li>
            <li>
              <a href="/signup?redirectTo=/conference/{{conference.id}}/register">
                Inscrição
              </a>
            </li>
          </ul>
        {{/if}}

        {{we-menu conference.mainMenu}}
      </div>
    </div>
  </nav>
</header>