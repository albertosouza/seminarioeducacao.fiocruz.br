<div class="promo" id="home" {{#each conference.banner}}
  style="background-image:url({{urls.original}});"
{{else}}
  style="background-image:url(/public/theme/we-theme-conference-seminarioeducacao.fiocruz.br/img/bg/promo.jpg);"
{{/each}} >
  <div class="container">
    <div class="row">
      <div class="col-md-6">
{{!--         <div class="promo-text">
          <h1 class="sr-only">{{conference.title}}</h1>
          <p class="lead">{{{conference.about}}}</p>
        </div> --}}
      </div>
      <div class="col-md-4 col-md-offset-2 wow fadeInDown" data-wow-duration="2s">
        <div class="register">
          {{{template 'conference/conference-registration-btn'}}}

          <p class="lead"><br>
            <strong>25 a 27 de agosto de 2015 <br> Fiocruz, Rio de Janeiro</strong>
          </p>

          {{we-cf-menu conference.socialMenu}}

          {{#ifCond userCfregistration.status 'registered'}}
            <div>
              <a href="/conference/{{conference.id}}/enviar-trabalho" class="btn btn-default btn-block btn-lg">Enviar trabalho para a mostra</a>
            </div>
          {{else}}
            <div>
              <a href="/conference/1/cfpage/8" class="btn btn-default btn-block btn-lg">Enviar trabalho para a mostra</a>
            </div>
          {{/ifCond}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="counter">
  <div class="container">
    <div class="row">
      <div class="row" id="countdown">
        <div class="col-md-12 wow bounceInUp" data-wow-duration="2s">
          <div class="promo-text">
            <h1 class="sr-only">{{conference.title}}</h1>
            <p class="lead">{{{conference.about}}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>