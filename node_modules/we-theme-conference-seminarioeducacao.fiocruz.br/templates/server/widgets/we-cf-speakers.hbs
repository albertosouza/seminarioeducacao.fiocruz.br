<div class="speakers" id="speakers">
  <div class="container">
    <div class="section-heading">
      <h1>{{widget.title}}</h1>
      {{!-- <p class="lead">Lorem ipsum dolor sit amet</p> --}}
    </div>
    {{#we-grid items=widget.speakers cols=3}}
      <div class="speaker wow fadeInDown animated" data-wow-delay="1s" data-wow-animation-name="fadeInDown" style="visibility: visible; animation-delay: 1s; -webkit-animation-delay: 1s; animation-name: fadeInDown; -webkit-animation-name: fadeInDown;">
        <div class="speaker-img">{{#each picture}}{{{we-image this 'medium'}}}{{/each}}</div>
        <div class="speaker-desc">
          <p>{{name}}</p>
          <span>{{about}}</span>
        </div>
      </div>
    {{/we-grid}}
  </div>
</div>