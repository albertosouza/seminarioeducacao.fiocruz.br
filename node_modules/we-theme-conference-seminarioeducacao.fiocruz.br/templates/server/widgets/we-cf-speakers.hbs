{{#widget-wrapper widget}}
<div class="speakers" id="speakers">
  <div class="container">
    <div class="section-heading">
      <h1>{{widget.title}}</h1>
      {{!-- <p class="lead">Lorem ipsum dolor sit amet</p> --}}
    </div>
    {{#we-grid items=widget.speakers cols=3}}
      <div class="speaker-img">{{#each picture}}{{{we-image this 'medium'}}}{{/each}}</div>
      <div class="speaker-desc">
        <p>{{name}}</p>
        <span>{{about}}</span>
      </div>
    {{/we-grid}}
  </div>
</div>
{{/widget-wrapper}}