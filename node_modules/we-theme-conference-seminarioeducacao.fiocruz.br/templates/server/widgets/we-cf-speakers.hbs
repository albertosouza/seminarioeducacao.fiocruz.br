{{#widget-wrapper widget}}
<div class="speakers" id="speakers">
  <div class="container">
    <div class="section-heading">
      <h1>{{widget.title}}</h1>
      {{!-- <p class="lead">Lorem ipsum dolor sit amet</p> --}}
    </div>
    <div class="row">
      {{#each widget.speakers}}
        <div class="col-md-4 speaker">
          <div class="speaker-img">{{#each picture}}{{{we-image this 'medium'}}}{{/each}}</div>
          <div class="speaker-desc">
            <p>{{name}}</p>
            <span>{{about}}</span>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
{{/widget-wrapper}}