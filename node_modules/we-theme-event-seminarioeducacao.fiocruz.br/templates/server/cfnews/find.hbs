<div class="row"><div class="col-lg-12 actions">{{we-action-create-btn model req event.id}}</div></div>

{{#each data}}
  <article class="photo">
    <div class="container">
      <div class="row mt20">
        {{#isPair @index}}
          <div class="col-md-6 wow fadeInLeft animated" data-wow-animation-name="fadeInLeft">
            <h1>{{#link-to 'cfnews.findOne' eventId id}}
              {{title}}
            {{/link-to}}</h1>
            <div class="article-meta">
              {{t 'Updated at'}} <time datetime="{{createdAt}}"><strong>{{we-date updatedAt}}</strong></time>  {{#each categories}} {{t 'category'}}: <strong>{{this}}</strong>{{/each}}
            </div>
            <hr>
            <p>{{{teaser}}}</p>
            <footer class="article-actions">
              {{we-action-view-btn 'cfnews' this ../../req eventId id }}
              {{we-action-edit-btn 'cfnews' this ../../req eventId id }}
              {{we-action-delete-btn 'cfnews' this ../../req eventId id }}
            </footer>
          </div>
          <div class="col-md-6 wow fadeInRight animated" data-wow-animation-name="fadeInRight">
            <div class="photo-wrapper">
              {{#link-to 'cfnews.findOne' eventId id}}
                {{#each featuredImage}}{{{we-image this 'large' class="article-featured-image"}}}{{/each}}
              {{/link-to}}
            </div>
          </div>
        {{else}}
          <div class="col-md-6 wow fadeInLeft animated" data-wow-animation-name="fadeInLeft">
            <div class="photo-wrapper">
              {{#link-to 'cfnews.findOne' eventId id}}
                {{#each featuredImage}}{{{we-image this 'large' class="article-featured-image"}}}{{/each}}
              {{/link-to}}
            </div>
          </div>
          <div class="col-md-6 wow fadeInRight  animated" data-wow-animation-name="fadeInRight">
            <h1>{{#link-to 'cfnews.findOne' eventId id}}{{title}}{{/link-to}}</h1>
            <div class="article-meta">
              {{t 'Updated at'}} <time datetime="{{createdAt}}"><strong>{{we-date updatedAt}}</strong></time>  {{#each categories}} {{t 'category'}}: <strong>{{this}}</strong>{{/each}}
            </div>
            <hr>
            <p>{{{teaser}}}</p>

            <footer class="article-actions">
              {{we-action-view-btn 'cfnews' this ../../req eventId id }}
              {{we-action-edit-btn 'cfnews' this ../../req eventId id }}
              {{we-action-delete-btn 'cfnews' this ../../req eventId id }}
            </footer>
          </div>
        {{/isPair}}
      </div>
    </div>
  </article>
{{else}}
  <p> {{t 'event.cfnews.empty'}}</p>
{{/each}}