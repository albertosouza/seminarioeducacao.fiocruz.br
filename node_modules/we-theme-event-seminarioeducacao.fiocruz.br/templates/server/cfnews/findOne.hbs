<article>
  <header>
    <div class="article-meta">
      {{t 'Updated at'}} <time datetime="{{record.createdAt}}"><strong>{{we-date record.updatedAt}}</strong></time> {{#each record.categories}} {{t 'category'}}: <strong>{{this}}</strong>{{/each}}
    </div>

  </header>

  <div class="photo-wrapper">
    {{#link-to 'cfnews.findOne' record.eventId record.id}}
      {{#each record.featuredImage}}{{{we-image this 'medium' class="article-featured-image"}}}{{/each}}
    {{/link-to}}
  </div>

  <p>{{{record.text}}}</p>

  <footer>
    <div class="row"><div class="col col-md-12">{{{we-terms record.tags}}}</div></div>
    <div class="row actions"><div class="col col-md-12">
      {{we-action-edit-btn model record req record.eventId id }}
      {{we-action-delete-btn model record req record.eventId id }}
    </div></div>
  </footer>

</article>