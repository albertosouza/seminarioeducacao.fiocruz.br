<!DOCTYPE html>
<html lang="{{locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{title}}</title>

    {{#each event.favicon}}
      <link rel="shortcut icon" href="{{urls.thumbnail}}" type="image/x-icon" />
    {{/each}}

    <meta property="og:image" content="/public/theme/we-theme-event-seminarioeducacao.fiocruz.br/img/sessf.jpg">

    <meta name="description" content="{{event.about}}" />

    <link rel="stylesheet" type="text/css" href="/public/theme/we-theme-event-seminarioeducacao.fiocruz.br/css/plugins/animate/animate.min.css">

    <!-- ///  google fonts  /// -->
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>

    {{{render-metadata-tags}}}
    <meta name="generator" content="We.js" />
    {{{render-stylesheet-tags}}}
    {{{render-javascript-tags 'header'}}}
    {{{template 'analytics'}}}

    <meta name="csrf-token" content="{{_csrf}}" />

</head><!--/head-->

<body class="{{model}} {{model}}-{{id}} cf cf-{{event.id}} {{action}}">
  <header class="main-header">
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
      {{!-- barra brasil --}}
      <div id="barra-brasil" style="height: 33px; width: 100%; padding:0 0 0 10px;position: relative; background-color:#f1f1f1;"></div>
      <script defer="defer" src="//barra.brasil.gov.br/barra.js" type="text/javascript"></script>
      {{!-- /barra brasil --}}

      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            {{#each event.logo}}
              <img class="event-logo" src="{{urls.thumbnail}}">
            {{else}}
              <img class="event-logo" src="/public/theme/we-theme-event-seminarioeducacao.fiocruz.br/img/logo-seminario-edicacao.png">
            {{/each}}
          </a>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
          {{#if req.user.id}}
            {{we-menu userMenu}}
          {{else}}
            <ul class="nav navbar-nav navbar-right">
              <li>
                <a href="/login">
                  Entrar
                </a>
              </li>
              <li>
                <a href="/signup?redirectTo=/event/{{event.id}}/register">
                  Inscrição
                </a>
              </li>
            </ul>
          {{/if}}

          {{we-menu event.mainMenu}}
        </div>
      </div>
    </nav>
  </header>

  {{{layoutHtml}}}

  {{{template 'footer'}}}
  {{{render-client-component-templates}}}
</body>
</html>