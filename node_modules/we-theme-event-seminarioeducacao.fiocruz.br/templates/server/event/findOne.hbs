<div class="promo" id="home" {{#each event.banner}}
  style="background-image:url({{urls.original}});"
{{/each}} >
  <div class="container">
    <div class="row">
      <div class="col-md-6">
{{!--         <div class="promo-text">
          <h1 class="sr-only">{{event.title}}</h1>
          <p class="lead">{{{event.about}}}</p>
        </div> --}}
      </div>
      <div class="col-md-4 col-md-offset-2">
        <div class="register">
          {{we-cf-registration-btn class="btn btn-block btn-lg" event=event locals=this userCfregistration=userCfregistration}}

          <p class="lead"><br>
            {{#if event.eventStartDate}}
              <strong>{{we-cf-date-range start=event.eventStartDate end=event.eventEndDate __=__}}</strong><br>
            {{/if}}
            <strong>{{event.location}}</strong>
          </p>

          {{we-cf-menu event.socialMenu}}

          {{we-cf-cfwork-btn class="btn btn-default btn-block btn-lg" event=event userId=currentUser.id theme=theme __=__}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="counter">
  <div class="container">
    <div class="row">
      <div class="row" id="countdown">
        <div class="col-md-12">
          <div class="promo-text">
            <h1 class="sr-only">{{event.title}}</h1>
            <p class="lead">{{{event.about}}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>