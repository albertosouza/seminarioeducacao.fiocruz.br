<div class="row">
  <div class="col-lg-12 actions">{{we-action-create-btn model req event.id req.user.id}}</div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <th>id</th>
    <th>{{t 'title'}}</th>
    <th>{{t 'status'}}</th>
    <th>{{t 'actions'}}</th>
  </thead>
  <tbody>
    {{#each record}}
      <tr>
        <td>{{id}}</td>
        <td>{{title}}</td>
        <td>
          {{#ifCond status 'send'}}Salvo{{/ifCond}}
          {{#ifCond status 'accepted'}}Aprovado{{/ifCond}}
        </td>
        <td>
          {{we-action-view-btn 'cfwork' this ../req eventId creatorId id }}
          {{we-action-edit-btn 'cfwork' this ../req eventId creatorId id }}
          {{we-action-delete-btn 'cfwork' this ../req eventId creatorId id }}
        </td>
      </tr>
    {{else}}
      <tr><td colspan="4" class="text-center">{{t 'event.cfwork.empty'}}</td></tr>
    {{/each}}
  </tbody>
</table>