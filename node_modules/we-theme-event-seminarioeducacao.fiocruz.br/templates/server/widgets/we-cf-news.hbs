{{#with widget.record}}
  <div class="photo">
    <div class="container">
      <div class="row mt20">
        <div class="col-md-6 wow fadeInLeft animated" data-wow-animation-name="fadeInLeft" style="visibility: visible; animation-name: fadeInLeft;">
          <h1>{{#link-to 'cfnews.findOne' eventId id}}{{title}}{{/link-to}}</h1>
          <p><small>
            {{t 'Updated at'}} <time datetime="{{createdAt}}"><strong>{{we-date updatedAt}}</strong></time>  {{#each categories}} {{t 'category'}}: <strong>{{this}}</strong>{{/each}}
          </small></p>
          <hr>
          <p>{{{teaser}}}</p>

          <div>
            {{we-action-view-btn 'cfnews' this ../locals.req eventId id }}
            {{we-action-edit-btn 'cfnews' this ../locals.req eventId id }}
          </div>
        </div>
        <div class="col-md-6 wow fadeInRight animated" data-wow-animation-name="fadeInRight" style="visibility: visible; animation-name: fadeInRight;">
          <div class="photo-wrapper">
            {{#link-to 'cfnews.findOne' eventId id}}
              {{#each featuredImage}}{{{we-image this 'large' class="img-responsive"}}}{{/each}}
            {{/link-to}}
          </div>
        </div>
      </div>
    </div>
  </div>
{{/with}}