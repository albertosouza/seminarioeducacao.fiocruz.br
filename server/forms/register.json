{
  "title": "auth.login.title",


  "method": "post",
  "action": "/signup",

  "fields": {
    "username": {
      "type": "text",
      "defaultValue": "",
      "allowNull": false
    },

    "fullName": {
      "type": "text",
      "defaultValue": ""
    },

    "password": {
      "type": "password",
      "defaultValue": "",
      "allowNull": false
    },
    "confirmPassword": {
      "type": "password",
      "defaultValue": "",
      "allowNull": false
    },

    "email": {
      "type": "email",
      "defaultValue": "",
      "allowNull": false
    },
    "confirmEmail": {
      "type": "email",
      "defaultValue": "",
      "allowNull": false
    },

    "organization": {
      "type": "vocabulary/tag",
      "defaultValue": "",
      "vocabularyName": "Organization",
      "canCreate": true,
      "formFieldMultiple": false
    },

    "cep": null,

    "cpf": {
      "type": "gov-br/cpf"
    },
    "passaporte": {
      "type": "gov-br/passaporte"
    },
    "estrangeiro": {
      "type": "gov-br/brasileiro-seletor",
      "defaultValue": false
    }
  },
  "actions": {
    "termSeparator": { "type": "break" },
    "acceptTerms": {
      "type": "terms-of-use",
      "allowNull": false,
      "defaultValue": false
    },

    "actionsSeparator": { "type": "break" },
    "submit": {
      "type": "submit"
    }
  }
}